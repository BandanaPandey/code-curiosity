.clearfix
  .col-md-3.col-md-offset-4
    %a{:href => '/'}
      %span
        = image_tag 'logo-home.png'
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.submit "Sign up", class: "btn btn-success", style: "width: 291px;"
    %br/ 
    %a.btn.btn-primary{  href: omniauth_authorize_path(:user, :github, user: 'Sponsorer') }
      %span.fa.fa-github
      Sign in with Github
    = render "devise/shared/links"
