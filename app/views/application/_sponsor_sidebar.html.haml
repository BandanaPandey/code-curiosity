%aside.main-sidebar
  %section.sidebar
    %ul.sidebar-menu
      - if current_user
        %li{class: is_active(params[:action], 'users')}
          =  link_to user_path(current_user) do
            %i.fa.fa-user
            %span Profile
        %li{class: is_active('index', 'activities')}
          = link_to activities_path do
            %i.fa.fa-cubes
            %span Activities